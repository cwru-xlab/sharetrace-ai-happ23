% Gemini theme
% https://github.com/anishathalye/gemini

% ====================
% Definitions
% ====================

% Colors from https://case.edu/umc/our-brand/visual-guidelines/color
\definecolor{cwru-blue}{cmyk}{1.0, 0.47, 0.12, 0.62}
\definecolor{cwru-gray}{cmyk}{0.35, 0.22, 0.23, 0.62}
\definecolor{cwru-black}{cmyk}{0, 0, 0, 1.0}

% Extra colors
\definecolor{light-gray}{cmyk}{0, 0, 0, 0.06}
\definecolor{light-blue}{cmyk}{0.29, 0.12, 0, 0.02}

% ====================
% Theme
% ====================

% Basic colors
\setbeamercolor{palette primary}{fg=black,bg=white}
\setbeamercolor{palette secondary}{fg=black,bg=white}
\setbeamercolor{palette tertiary}{bg=black,fg=white}
\setbeamercolor{palette quaternary}{fg=black,bg=white}
\setbeamercolor{structure}{fg=cwru-blue}

% Headline
\setbeamercolor{headline}{fg=white,bg=cwru-blue}

% Block
\setbeamercolor{block title}{fg=cwru-blue,bg=white}
\setbeamercolor{block separator}{bg=black}
\setbeamercolor{block body}{fg=black,bg=white}

% Alert Block
\setbeamercolor{block alerted title}{fg=cwru-blue,bg=light-blue}
\setbeamercolor{block alerted separator}{bg=black}
\setbeamercolor{block alerted body}{fg=black,bg=light-blue}

% Example Block
\setbeamercolor{block example title}{fg=cwru-blue,bg=light-gray}
\setbeamercolor{block example separator}{bg=black}
\setbeamercolor{block example body}{fg=black,bg=light-gray}

% Heading
\setbeamercolor{heading}{fg=black}

% Itemize
\setbeamercolor{item}{fg=cwru-blue}

% Bibliography
\setbeamercolor{bibliography item}{fg=black}
\setbeamercolor{bibliography entry author}{fg=black}
\setbeamercolor{bibliography entry title}{fg=black}
\setbeamercolor{bibliography entry location}{fg=black}
\setbeamercolor{bibliography entry note}{fg=black}
